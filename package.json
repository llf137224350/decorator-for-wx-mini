{
  "name": "decorator-for-wx-mini",
  "version": "1.0.2",
  "description": "改变微信小程序逻辑代码的书写方式",
  "miniprogram": "dist",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/llf137224350/miniprogram_ts_template.git"
  },
  "scripts": {
    "compile": "./node_modules/typescript/bin/tsc",
    "tsc": "node ./node_modules/typescript/lib/tsc.js",
    "watch": "node ./scripts/watch_less.js",
    "build": "node ./template/build.js",
    "page": "node ./template/page.js",
    "component": "node ./template/component.js",
    "prepare": "husky install"
  },
  "keywords": [
    "微信小程序",
    "TypeScript",
    "miniprogram",
    "component",
    "Component",
    "controller",
    "Controller"
  ],
  "bugs": {
    "url": "https://github.com/llf137224350/miniprogram_ts_template/issues"
  },
  "files": [
    "miniprogram/base"
  ],
  "author": "い 狂奔的蜗牛",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/llf137224350/miniprogram_ts_template#readme",
  "dependencies": {
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "less": "4^.1.1",
    "chokidar": "^3.4.3",
    "console-color-mr": "^2.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "miniprogram-api-typings": "^2.8.3-1",
    "typescript": "^3.3.3333",
    "tslint": "^6.1.3",
    "shelljs": "^0.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts,tsx,js,jsx": [
      "prettier --write"
    ]
  }
}
